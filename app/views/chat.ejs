<!DOCTYPE html>
<html lang="en">
<head>
  <% include ./parts/head.ejs %>
<script>
    var recognition = new webkitSpeechRecognition();
            recognition.continuous = false;
            recognition.interimResults = true;
            function start(){
                recognition.onresult = function(event) { 
                console.log(event);
                var output = document.getElementById("myMsg");
                output.innerHTML = "";
                for(var i=0; i<event.results.length; i++){
                    output.innerHTML = output.innerHTML + event.results[i][0].transcript;
                }
            }
        recognition.start();
    };
</script>
</head>
<body>
  <% include ./parts/header.ejs %>
  <div class="panel panel-primary" style="margin-left:10%;margin-right:10%;">
<div class="panel-heading">
  <h3>Welcome to Group Messaging Solution</h3>
  <div > <ul id="hell0" class="list-unstyled">

  </ul> </div>
</div></div>
<hr><br>
  <main>
    <div class="container-fluid">
      <input type="hidden" id="user" value="<%= user.username %>"/>
      <div class="row">
        <div class="col-sm-4">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h2>Chat Options</h2></div>

            <div class="panel-body" id="scrl1">
              <h4 class="boxF">For Group Chat Click on Group Button and for One-to-One chat click on Username</h4>
              <ul id="list" ></ul>
            </div>
            <div class="panel-footer">
              <p id="typing"  class="btn btn-danger btn-block btn-lg"></p>
            </div>
          </div>
        </div>
        <div class="col-sm-8">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h4 id="frndName">Chat Room</h4>
            </div>
            <div class="panel-body" id="scrl2">
              <p id="loading">Loading..... Please Wait.</p>
              <p id="noChat">No More Chats To Display.....</p>
              <p id="initMsg">!!...Click On User Or Group Button To Start Chat...!!</p>
              <ul id="messages"></ul>
            </div>
            <div class="panel-footer">
              <form id="chatForm" action="">
                <input id="myMsg" class="input-box-send" placeholder="Write Message Here.."/>
                <img onclick="start()" src="//i.imgur.com/cHidSVu.gif" />
                <button id="sendBtn" class="btn btn-success btn-lg"><span class="glyphicon glyphicon-send"></span> <b>Send</b></button>
              </form>
            </div>
          </div>
        </div>

      </div>
    </div>
  </main>
  <% include ./parts/footer.ejs %>

  <script src="/js/scriptForChat.js"></script>
</body>
</html>
